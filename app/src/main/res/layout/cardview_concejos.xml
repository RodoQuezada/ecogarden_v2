<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/concejosCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_heigth"
    cardview:cardCornerRadius="@dimen/cornerradius"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pictureCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/foto_flor01"
            android:scaleType="centerCrop"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >
                <TextView
                    android:id="@+id/nombreCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_cardview"
                    android:textColor="@color/colorIcons"
                    android:textSize="@dimen/tamano_tarjeta"
                    android:textStyle="bold"
                    />
            </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>